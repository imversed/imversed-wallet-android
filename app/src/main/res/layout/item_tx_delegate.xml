<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tx_delegate_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_tx_bank" />

                <TextView
                    android:id="@+id/tx_delegate_text"
                    style="@style/font_ss_15_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_4"
                    android:text="@string/tx_delegate" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:orientation="vertical">

                <TextView
                    style="@style/font_ss_12_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_delegator" />

                <TextView
                    android:id="@+id/tx_delegate_delegator"
                    style="@style/font_ss_12_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:text="-" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:orientation="vertical">

                <TextView
                    style="@style/font_ss_12_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_validator" />

                <TextView
                    android:id="@+id/tx_delegate_validator"
                    style="@style/font_ss_12_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:text="-" />

                <TextView
                    android:id="@+id/tx_delegate_moniker"
                    style="@style/font_ss_11_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="-" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16">

                <TextView
                    android:id="@+id/tx_delegate_amount_title"
                    style="@style/font_ss_12_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_amount" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tx_delegate_amount_title">

                    <TextView
                        android:id="@+id/tx_delegate_amount_symbol"
                        style="@style/font_ss_12_atom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        tools:text="@string/str_atom_c" />

                    <TextView
                        android:id="@+id/tx_delegate_amount"
                        style="@style/font_ss_12_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tx_delegate_amount_symbol"
                        android:layout_marginRight="@dimen/space_2"
                        android:layout_toLeftOf="@+id/tx_delegate_amount_symbol"
                        android:text="-" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tx_commission_amount_title"
                    style="@style/font_ss_12_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_auto_claimed_reward" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tx_commission_amount_title"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/commission_layout0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tx_commission_symbol0"
                            style="@style/font_ss_12_atom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true" />

                        <TextView
                            android:id="@+id/tx_commission_amount0"
                            style="@style/font_ss_12_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/tx_commission_symbol0"
                            android:layout_marginRight="@dimen/space_2"
                            android:layout_toLeftOf="@+id/tx_commission_symbol0" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/commission_layout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tx_commission_symbol1"
                            style="@style/font_ss_12_atom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true" />

                        <TextView
                            android:id="@+id/tx_commission_amount1"
                            style="@style/font_ss_12_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/tx_commission_symbol1"
                            android:layout_marginRight="@dimen/space_2"
                            android:layout_toLeftOf="@+id/tx_commission_symbol1" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/commission_layout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tx_commission_symbol2"
                            style="@style/font_ss_12_atom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true" />

                        <TextView
                            android:id="@+id/tx_commission_amount2"
                            style="@style/font_ss_12_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/tx_commission_symbol2"
                            android:layout_marginRight="@dimen/space_2"
                            android:layout_toLeftOf="@+id/tx_commission_symbol2" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/commission_layout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tx_commission_symbol3"
                            style="@style/font_ss_12_atom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true" />

                        <TextView
                            android:id="@+id/tx_commission_amount3"
                            style="@style/font_ss_12_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/tx_commission_symbol3"
                            android:layout_marginRight="@dimen/space_2"
                            android:layout_toLeftOf="@+id/tx_commission_symbol3" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>