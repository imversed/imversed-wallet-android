<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_12"
        android:layout_marginEnd="@dimen/space_12"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tx_msg_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/incentive_ic" />

                <TextView
                    android:id="@+id/tx_msg_text"
                    style="@style/font_ss_17_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_4"
                    android:text="@string/tx_kava_delegator_incentive2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:orientation="vertical">

                <TextView
                    style="@style/font_ss_12_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_claimer" />

                <TextView
                    android:id="@+id/tx_incentive_sender"
                    style="@style/font_ss_12_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    tools:text="-" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:orientation="vertical">

                <TextView
                    style="@style/font_ss_12_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_multiplier_name" />

                <TextView
                    android:id="@+id/tx_multiplier_name"
                    style="@style/font_ss_12_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:singleLine="true"
                    tools:text="-" />
            </LinearLayout>


            <TextView
                style="@style/font_ss_12_gray1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:text="@string/str_incentive_amount" />

            <RelativeLayout
                android:id="@+id/incen0Layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:visibility="gone">

                <TextView
                    android:id="@+id/kava_symbol"
                    style="@style/font_ss_12_white"
                    android:layout_width="@dimen/space_40"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="right"
                    android:text="KAVA" />

                <TextView
                    android:id="@+id/kava_amount"
                    style="@style/font_ss_12_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/kava_symbol"
                    android:layout_marginEnd="@dimen/space_2"
                    android:layout_toStartOf="@+id/kava_symbol"
                    tools:text="-" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/incen1Layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:visibility="gone">

                <TextView
                    android:id="@+id/swp_symbol"
                    style="@style/font_ss_12_white"
                    android:layout_width="@dimen/space_40"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="right"
                    android:text="SWP" />

                <TextView
                    android:id="@+id/swp_amount"
                    style="@style/font_ss_12_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/swp_symbol"
                    android:layout_marginEnd="@dimen/space_2"
                    android:layout_toStartOf="@+id/swp_symbol"
                    tools:text="-" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/incen2Layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:visibility="gone">

                <TextView
                    android:id="@+id/hard_symbol"
                    style="@style/font_ss_12_white"
                    android:layout_width="@dimen/space_40"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="right"
                    android:text="HARD" />

                <TextView
                    android:id="@+id/hard_amount"
                    style="@style/font_ss_12_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/hard_symbol"
                    android:layout_marginEnd="@dimen/space_2"
                    android:layout_toStartOf="@+id/hard_symbol"
                    tools:text="-" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/incen3Layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:visibility="gone">

                <TextView
                    android:id="@+id/usdx_symbol"
                    style="@style/font_ss_12_white"
                    android:layout_width="@dimen/space_40"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="right"
                    android:text="USDX" />

                <TextView
                    android:id="@+id/usdx_amount"
                    style="@style/font_ss_12_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/usdx_symbol"
                    android:layout_marginEnd="@dimen/space_2"
                    android:layout_toStartOf="@+id/usdx_symbol"
                    tools:text="-" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>